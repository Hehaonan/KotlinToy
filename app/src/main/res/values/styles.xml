<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="subTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/dp6</item>
        <item name="android:paddingTop">@dimen/dp6</item>
        <item name="android:layout_marginTop">@dimen/dp6</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/dp20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="actionButton">
        <item name="android:background">@drawable/ripple_action_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp4</item>
        <item name="android:layout_marginRight">@dimen/dp4</item>
        <item name="android:padding">@dimen/dp12</item>
        <item name="android:drawablePadding">@dimen/dp4</item>
        <item name="android:drawableTint">@color/textColor</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

</resources>
