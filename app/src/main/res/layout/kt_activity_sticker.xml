<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sticker.TestStickerActivity">

    <RelativeLayout
        android:id="@+id/create_iamge"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <com.android.hhn.kotlintoy.sticker.view.StickerView
            android:id="@+id/id_stickerew"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <TextView
        android:id="@+id/test_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/dp16"
        android:background="@drawable/kt_sticker_normal_text_bg"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp8"
        android:paddingVertical="@dimen/dp4"
        android:text="测试测试测试文字\n换行换行1\n换行换行2"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dp20"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/add_image"
        style="@style/actionButton"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp4"
        android:drawableStart="@drawable/ic_image_black"
        android:text="添加图片" />

    <Button
        android:id="@+id/add_text"
        style="@style/actionButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp4"
        android:drawableStart="@drawable/ic_edit_black"
        android:text="添加文字" />

    <Button
        android:id="@+id/btn_save"
        style="@style/actionButton"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dp4"
        android:drawableStart="@drawable/ic_collections_black"
        android:text="合成贴纸" />
</RelativeLayout>
